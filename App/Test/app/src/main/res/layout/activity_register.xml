<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Informacion Personal"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edi_nombre"
                style="@style/edi_textSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/names" />

            <EditText
                android:id="@+id/edi_apellidos"
                style="@style/edi_textSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/last_names" />

            <EditText
                android:id="@+id/edi_correo"
                style="@style/edi_textSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mail" />

            <EditText
                android:id="@+id/edi_telefono"
                style="@style/edi_textSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phone_number" />

            <EditText
                android:id="@+id/edi_password"
                style="@style/edi_textSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password" />

            <EditText
                android:id="@+id/edi_verificar"
                style="@style/edi_textSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/repeat_password" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/pay_methds"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edi_tarjeta"
                style="@style/edi_textSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/card_number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/expiration"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="@string/cv_code"
                    android:textAlignment="textEnd"
                    android:textSize="15dp" />


                <Button
                    android:id="@+id/btn_help"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edi_mes"
                    style="@style/edi_textSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/month"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/edi_aÃ±o"
                    style="@style/edi_textSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:hint="@string/year"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/eid_codigo_cv"
                    style="@style/edi_textSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8" />
            </LinearLayout>

            <EditText
                android:id="@+id/edi_direccion"
                style="@style/edi_textSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/address" />

            <EditText
                style="@style/edi_textSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/zip_code" />

            <Button
                android:id="@+id/btn_tarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#F47A14"
                android:text="@string/register"
                android:textColor="#fff" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
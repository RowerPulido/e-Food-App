<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <!-- cursor y línea normal-->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!-- cursor y línea con foco-->
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="itemND" parent="EditText">
        <item name="android:colorPressedHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="edi_textSize" parent="edi_textSize">
        <item name="android:textSize">14dp</item>
    </style>
</resources>
